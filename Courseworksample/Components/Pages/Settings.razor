@page "/settings"
@using Courseworksample.Services
@inject ThemeService ThemeService
@inject AppLockState LockState
@inject SecurityService SecurityService
@inject AuthService AuthService
@inject NavigationManager Nav

<h2>⚙️ Settings</h2>

@if (!LockState.IsUnlocked)
{
    <p>This app is locked.</p>
    <button @onclick="GoLock">Go to Unlock</button>
}
else
{
    <div class="settings-container">

        <!-- Theme Section -->
        <div class="settings-section">
            <h3>🎨 Appearance</h3>

            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-label">Theme</div>
                    <div class="setting-description">
                        Switch between light and dark mode
                    </div>
                </div>
                <div class="setting-control">
                    <label class="theme-switch">
                        <input type="checkbox"
                               checked="@ThemeService.IsDarkMode"
                               @onchange="ToggleTheme" />
                        <span class="theme-slider"></span>
                    </label>
                    <span class="theme-label">@(ThemeService.IsDarkMode ? "🌙 Dark" : "☀️ Light")</span>
                </div>
            </div>
        </div>

        <!-- Security Section -->
        <div class="settings-section">
            <h3>🔒 Security</h3>

            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-label">Password Protection</div>
                    <div class="setting-description">
                        Your journal is protected with a PIN/Password
                    </div>
                </div>
                <div class="setting-control">
                    <button class="btn-secondary" @onclick="ChangePIN">Change PIN</button>
                </div>
            </div>

            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-label">Lock App</div>
                    <div class="setting-description">
                        Lock the app now
                    </div>
                </div>
                <div class="setting-control">
                    <button class="btn-danger" @onclick="LockApp">Lock Now</button>
                </div>
            </div>

            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-label">Logout</div>
                    <div class="setting-description">
                        Sign out from your account
                    </div>
                </div>
                <div class="setting-control">
                    <button class="btn-danger" @onclick="LogoutUser">Logout</button>
                </div>
            </div>
        </div>

        <!-- Account Section -->
        <div class="settings-section">
            <h3>👤 Account</h3>

            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-label">Current User</div>
                    <div class="setting-description">
                        @if (AuthService.CurrentUser != null)
                        {
                            <strong>@AuthService.CurrentUser.Username</strong>
                    
                            <br />
                            @if (!string.IsNullOrWhiteSpace(AuthService.CurrentUser.FullName))
                            {
                                @AuthService.CurrentUser.FullName
                    
                                <br />
                            }
                            @if (!string.IsNullOrWhiteSpace(AuthService.CurrentUser.Email))
                            {
                                @AuthService.CurrentUser.Email
                    
                                <br />
                            }
                            <span style="font-size: 0.85em;">Member since: @AuthService.CurrentUser.CreatedAt.ToString("MMM dd, yyyy")</span>
                        }
                        else
                        {
                            <span>Not logged in</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- App Info Section -->
        <div class="settings-section">
            <h3>ℹ️ About</h3>

            <div class="setting-item">
                <div class="setting-info">
                    <div class="setting-label">Journalix</div>
                    <div class="setting-description">
                        Your Daily Journaling App<br />
                        Version 1.0.0<br />
                        © 2026 CS6004NI Coursework
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(_message))
        {
            <div class="message-box @_messageType">
                @_message
            </div>
        }
    </div>
}

@code {
    private string _message = "";
    private string _messageType = "info";

    private void GoLock() => Nav.NavigateTo("/lock");

    private void ToggleTheme()
    {
        ThemeService.ToggleTheme();
        _message = $"Theme changed to {(ThemeService.IsDarkMode ? "Dark" : "Light")} mode";
        _messageType = "success";
        StateHasChanged();
    }

    private void ChangePIN()
    {
        Nav.NavigateTo("/lock");
    }

    private void LockApp()
    {
        LockState.IsUnlocked = false;
        Nav.NavigateTo("/lock");
    }

    private void LogoutUser()
    {
        AuthService.Logout();
        Nav.NavigateTo("/login");
    }
}

<style>
    .settings-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .settings-section {
        background: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
    }

        .settings-section h3 {
            margin: 0 0 20px 0;
            font-size: 1.2em;
            color: var(--text-color);
            border-bottom: 2px solid var(--border-color);
            padding-bottom: 10px;
        }

    .setting-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid var(--border-light);
    }

        .setting-item:last-child {
            border-bottom: none;
        }

    .setting-info {
        flex: 1;
    }

    .setting-label {
        font-weight: 600;
        font-size: 1em;
        color: var(--text-color);
        margin-bottom: 5px;
    }

    .setting-description {
        font-size: 0.9em;
        color: var(--text-muted);
        line-height: 1.4;
    }

    .setting-control {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Theme Toggle Switch */
    .theme-switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .theme-switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .theme-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: 0.4s;
        border-radius: 34px;
    }

        .theme-slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }

    .theme-switch input:checked + .theme-slider {
        background-color: #4f46e5;
    }

        .theme-switch input:checked + .theme-slider:before {
            transform: translateX(26px);
        }

    .theme-label {
        font-size: 0.95em;
        font-weight: 500;
        color: var(--text-color);
        min-width: 80px;
    }

    /* Buttons */
    .btn-secondary, .btn-danger {
        padding: 8px 16px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.2s;
    }

    .btn-secondary {
        background: var(--button-bg);
        color: var(--button-text);
    }

        .btn-secondary:hover {
            background: var(--button-hover);
        }

    .btn-danger {
        background: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background: #c82333;
        }

    /* Message Box */
    .message-box {
        margin-top: 20px;
        padding: 12px 16px;
        border-radius: 8px;
        font-size: 0.95em;
    }

        .message-box.success {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
        }

        .message-box.info {
            background: #d1ecf1;
            border: 1px solid #bee5eb;
            color: #0c5460;
        }

    /* Responsive */
    @@media (max-width: 600px) {
        .setting-item

    {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .setting-control {
        width: 100%;
        justify-content: space-between;
    }

    }
</style>
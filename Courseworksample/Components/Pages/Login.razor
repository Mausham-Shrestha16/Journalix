@page "/login"
@using Courseworksample.Services
@inject AuthService AuthService
@inject NavigationManager Nav

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>📔 Journalix</h1>
            <p>Your Daily Journaling Companion</p>
        </div>

        <div class="auth-form">
            <h2>Welcome Back</h2>

            <div class="form-group">
                <label>Username</label>
                <input type="text"
                       class="form-control"
                       @bind="_username"
                       placeholder="Enter your username"
                       @onkeydown="HandleKeyPress" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password"
                       class="form-control"
                       @bind="_password"
                       placeholder="Enter your password"
                       @onkeydown="HandleKeyPress" />
            </div>

            @if (!string.IsNullOrWhiteSpace(_message))
            {
                <div class="message @_messageType">
                    @_message
                </div>
            }

            <button class="btn-primary" @onclick="PerformLogin" disabled="@_loading">
                @if (_loading)
                {
                    <span>Logging in...</span>
                }
                else
                {
                    <span>Login</span>
                }
            </button>

            <div class="auth-footer">
                <p>Don't have an account? <a href="/register">Register here</a></p>
            </div>
        </div>
    </div>
</div>

@code {
    private string _username = "";
    private string _password = "";
    private string _message = "";
    private string _messageType = "error";
    private bool _loading = false;

    protected override async Task OnInitializedAsync()
    {
        // If already authenticated, redirect to home
        if (AuthService.IsAuthenticated)
        {
            Nav.NavigateTo("/");
        }

        // Check if any users exist, if not redirect to registration
        var hasUsers = await AuthService.HasUsersAsync();
        if (!hasUsers)
        {
            Nav.NavigateTo("/register");
        }
    }

    private async Task PerformLogin()
    {
        _loading = true;
        _message = "";

        var result = await AuthService.LoginAsync(_username, _password);

        if (result.Success)
        {
            _messageType = "success";
            _message = result.Message;
            await Task.Delay(500);
            Nav.NavigateTo("/");
        }
        else
        {
            _messageType = "error";
            _message = result.Message;
        }

        _loading = false;
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await PerformLogin();
        }
    }
}

